.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 36rpx;
}
.flex-style text{
  margin: 0 auto;
  line-height: 70rpx;
}
.map_container{
  position: absolute;
  top: 30px;
  bottom: 360px;
  left: 0;
  right: 0;
}
.map_container text{
  margin: 0 auto;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.map{
  width: 100%;
  height: 100%;
}
.btns{
 position: absolute;
 height: 60px;
 width: 60%;
 text-align: center;
 bottom: 0;
 left: 0;
 right: 0;
 margin: auto;
}
.receive-now{
  padding: 14px 6px;
  background-color: #E67F02;
  color: #fff;
  border-radius: 25px;
  font-size: 18px;
  height: 24px;
  width: 80%;
  line-height: 24px;
  margin-top: 4px;
}
.cancel-btn{
  position: absolute;
  width: 38%;
  padding: 4px 0;
  font-size: 16px;
  background-color: #fff;
  border-radius: 25px;
  border: 1px solid #E67F02;
  right: -30%;
  top: 12px;
  line-height: 25px;
}