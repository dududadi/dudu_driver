.overflow-h{
  overflow: hidden;
  position: relative;
}
.flex-style .fcolor-red{
  color: #f00;
}
.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 37.5rpx;
  flex-direction: column;
  text-align: center;
}
.flex-style text{
  display: block;
  margin: 0 auto;
  height: 30px;
  line-height: 30px;
  color: #E67F02;
}
.flex-style view{
  height: 30px;
}
.map_container{
  position: absolute;
  bottom: 60px;
  left: 0;
  right: 0;
}
.map_container text{
  margin: 0 auto;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.map{
  width: 100%;
  height: 100%;
}
.btns{
 position: absolute;
 height: 60px;
 width: 80%;
 text-align: center;
 bottom: 0;
 left: 0;
 right: 0;
 margin: auto;
}
.receive-now{
  padding: 14px 1%;
  background-color: #E67F02;
  color: #fff;
  border-radius: 25px;
  font-size: 18px;
  height: 24px;
  width: 68%;
  line-height: 24px;
  margin-top: 4px;
}
.arrive-now{
  padding: 14px 1%;
  background-color: #E67F02;
  color: #fff;
  border-radius: 25px;
  font-size: 18px;
  height: 24px;
  width: 98%;
  line-height: 24px;
  margin-top: 4px;
}
.cancel-btn{
  position: absolute;
  width: 30%;
  padding: 5px 0;
  font-size: 16px;
  background-color: #fff;
  border-radius: 25px;
  border: 1px solid #E67F02;
  right: -8%;
  top: 12px;
  line-height: 25px;
}