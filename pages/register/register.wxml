<view class="section">
    <view class="section__title">基本信息</view>
    <input placeholder="请输入手机号" auto-focus/>
    <input type="password" placeholder="设置密码" focus="{{focus}}" />
    <input type="password" placeholder="再次确认密码" focus="{{focus}}" />
</view>
<view class="section">
    <view class="section__title">驾驶证信息</view>
    <input type="text" placeholder="司机姓名" focus="{{focus}}" value='司机姓名' />
    <input type="idcard" placeholder="身份证号码" />
</view>
<view class="section datepicker">
    <picker mode="date" value="{{getdate}}" start="1970-09-01" end="2017-11-20" bindchange="bindDateChange">
        <view class="picker">
            初次领取驾照日期: {{getdate}}
        </view>
    </picker>
</view>
<view class="section">
    <view class="section__title">行驶证信息</view>
    <input type="text" placeholder="车牌号" focus="{{focus}}" />
    <input type="text" placeholder="车型" focus="{{focus}}" />
    <input type="text" placeholder="车辆所有人" focus="{{focus}}" />
    <picker mode="date" value="{{regdate}}" start="1970-01-01" end="2017-11-20" bindchange="bindDateChange">
        <input placeholder='车辆注册信息' value='{{regdate}}' />
    </picker>
</view>
<button>保存</button>